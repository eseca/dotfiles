[global/wm]
margin-top = 5
margin-bottom = 5

[theme]
backgroung = #1d1f21
foreground = #c5c8c6
comment = #969896
red = #cc6666
yellow = #f0c674
blue = #81a2be

[bar/main]
monitor = ${env:MONITOR:DP-1}
override-redirect = true
width = 100%
height = 15
offset-x = 0
offset-y = 0

background = ${theme.background}
foreground = ${theme.foreground}

underline-size = 1
underline-color = #00f

spacing = 1
padding-left = 0
padding-right = 2
