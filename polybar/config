modules-right = battery

[module/xwindow]
type = internal/xwindow
label = %title%
label-maxlen = 30


[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
mount-1 = /home
mount-2 = /invalid/mountpoint

label-mounted = %mountpoint%: %percentage_free%

label-unmounted = %mountpoint%: not mounted
label-unmounted-foreground = #55


[module/bspwm]
type = internal/bspwm
ws-icon-default = √ó

format = <label-monitor> <label-state>

label-monitor = %name%:
label-monitor-foreground = ${theme.blue}

label-focused = %index%:%name%
label-focused-foreground = ${theme.yellow}
label-focused-padding = 2

label-occupied = %index%:%name%
label-occupied-foreground = ${theme.foreground}
label-occupied-padding = 2

label-urgent = %index%:%name%
label-urgent-foreground = ${theme.red}
label-urgent-padding = 2

label-empty = %index%:%name%
label-empty-foreground = ${theme.comment}
label-empty-padding = 2


